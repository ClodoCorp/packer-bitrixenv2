{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "4ed6c56d365bd3ab12cd88b8a480f4a62e7c66d2",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.yandex.ru/centos/6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "net_device": "virtio-net",
      "output_directory": "output/bitrixenv-base-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "1024"
        ],
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/bitrixenv-base-x86_64-qemu/bitrixenv-base-x86_64.raw"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "bitrixenv-base-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/prepare_bitrix.sh",
        "scripts/bitrixenv.sh",
        "scripts/cleanup_bitrix.sh",
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell",
      "environment_vars": [
        "BITRIX_VERSION=5"
      ]
    }
  ]
}
